    <header>
        <!--Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark cyan fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Forum Des Sports</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-4" aria-controls="navbarSupportedContent-4" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-4">
                    <ul class="navbar-nav ml-auto">                        
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                        @if (User.IsInRole("Admin")){
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="UsagersControleur" asp-action="Index">Utilisateurs</a>
                            </li>
                        }                      
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <!--/.Navbar -->
        <!--Carousel Wrapper-->
        <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
            <!--Slides-->
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/Hockey1.jpg" alt="First slide">
                     <div class="gradient"></div>
                      <div class="carousel-caption">
                       <h1>Hockey</h1>
                       <p class="lead">Cliquez ici pour en savoir plus sur le sujet</p>
                       <a class="btn btn-primary" href="about.html"><span>En Savoir Plus</span></a>
                      </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/Baseball1.jpg" alt="Second slide">
                     <div class="gradient"></div>
                      <div class="carousel-caption">
                       <h1>Baseball</h1>
                       <p class="lead">Cliquez ici pour en savoir plus sur le sujet</p>
                       <a class="btn btn-primary" href="about.html"><span>En Savoir Plus</span></a>
                      </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/Tennis1.jpg" alt="Third slide">
                     <div class="gradient"></div>
                      <div class="carousel-caption">
                       <h1>Tennis</h1>
                       <p class="lead">Cliquez ici pour en savoir plus sur le sujet</p>
                       <a class="btn btn-primary" href="about.html"><span>En Savoir Plus</span></a>
                      </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/Soccer1.jpg" alt="Third slide">
                     <div class="gradient"></div>
                      <div class="carousel-caption">
                       <h1>Soccer</h1>
                       <p class="lead">Cliquez ici pour en savoir plus sur le sujet</p>
                       <a class="btn btn-primary" href="about.html"><span>En Savoir Plus</span></a>
                      </div>
                </div>
            </div>
            <!--/.Slides-->
            <!--/.Controls-->
            <ol class="carousel-indicators">
                <li data-target="#carousel-thumb" data-slide-to="0" class="active"> <img class="d-block w-100" src="~/images/Hockey1.jpg" class="img-fluid"></li>
                <li data-target="#carousel-thumb" data-slide-to="1"><img class="d-block w-100" src="~/images/Baseball1.jpg" class="img-fluid"></li>
                <li data-target="#carousel-thumb" data-slide-to="2"><img class="d-block w-100" src="~/images/Tennis1.jpg" class="img-fluid"></li>
                <li data-target="#carousel-thumb" data-slide-to="3"><img class="d-block w-100" src="~/images/Soccer1.jpg" class="img-fluid"></li>
            </ol>
        </div>
        <!--/.Carousel Wrapper-->
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

